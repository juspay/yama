{
  "name": "@juspay/yama",
  "version": "1.4.0",
  "description": "Enterprise-grade Pull Request automation toolkit with AI-powered code review and description enhancement",
  "keywords": [
    "pr",
    "pull-request",
    "code-review",
    "ai",
    "automation",
    "bitbucket",
    "github",
    "gitlab",
    "security",
    "quality"
  ],
  "homepage": "https://github.com/juspay/yama#readme",
  "bugs": {
    "url": "https://github.com/juspay/yama/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juspay/yama.git"
  },
  "license": "MIT",
  "author": "Juspay Technologies <support@juspay.in> (https://juspay.io)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yama": "dist/cli/index.js",
    "pr-guardian": "dist/cli/index.js",
    "pr-police": "dist/cli/index.js",
    "pr-scribe": "dist/cli/index.js"
  },
  "directories": {
    "test": "tests"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!dist/**/*.map",
    "!dist/**/tests",
    "!dist/**/test-*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "yama.config.example.yaml"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node-dev --respawn --transpile-only src/cli/index.ts",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs": "typedoc src",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "prepack": "npm run build && npm run test",
    "changeset": "changeset",
    "changeset:version": "changeset version && git add --all",
    "release": "npm run build && npm run test && changeset publish",
    "release:dry": "npm publish --dry-run",
    "release:github": "npm publish --registry https://npm.pkg.github.com",
    "version:check": "npm version --no-git-tag-version",
    "pack:verify": "npm pack && tar -tzf *.tgz | head -20",
    "validate": "npm run validate:env && npm run validate:security",
    "validate:all": "npm run lint && npm run type-check && npm run validate",
    "validate:env": "node scripts/validate-env.cjs",
    "validate:security": "node scripts/validate-security.cjs",
    "validate:commit": "node scripts/commit-validation.cjs \"$(git log -1 --pretty=format:'%s')\"",
    "validate:build": "node scripts/build-validations.cjs",
    "commit:validate": "node scripts/commit-validation.cjs",
    "pre-commit": "lint-staged",
    "pre-push": "npm run validate && npm run test",
    "quality:all": "npm run lint && npm run format && npm run test",
    "quality:metrics": "node scripts/quality-metrics.cjs",
    "quality:report": "npm run quality:metrics && echo 'Quality metrics saved to quality-metrics.json'",
    "check:all": "npm run lint && npm run format --check && npm run validate && npm run validate:commit"
  },
  "dependencies": {
    "@juspay/neurolink": "^7.40.1",
    "@nexus2520/bitbucket-mcp-server": "^0.10.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.0",
    "fast-glob": "^3.3.1",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "ora": "^5.4.1",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.26.2",
    "@eslint/js": "^9.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.0.0",
    "@types/lodash": "^4.14.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "publint": "^0.3.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "pnpm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.ts": []
  }
}
